{
    "manifest_version": 3,
    "name": "Hashed wallet",
    "version": "1.0",
    "icons": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "64": "images/logo.png",
        "128": "images/logo.png"
    },
    "background": {
        "service_worker": "utils/background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}